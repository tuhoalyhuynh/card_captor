<% if (!currentUser) { %>
    <%- include('../partials/not_logged') %>
<% } %> 
<form method="GET" action="/search/results">
    <input type="text" name="name" value="">
    <button class="btn btn-info" type="submit">Search</button>
</form>
<% if (cards.length < 1) { %>
    <h1 class="text-center text_display">There are no results for "<%= name %>"</h1>
<% } else { %> 
<h1 class="text-center text_display">Search results for "<%= name %>"</h1>
<hr>
<div class="container"> 
    <% cards.forEach(function(card) { %>
        <div class="well">
            <a href="/search/<%= card.id %>"><img class="card_grid" src="<%= card.imageUrl %>" alt=""></a>
            <a href="/search/<%= card.id %>"><h5><%= card.name %></h5></a>
        </div>
    <% }); %>
</div>
<% }; %> 